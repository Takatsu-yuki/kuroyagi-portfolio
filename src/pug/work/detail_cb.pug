mixin detail(num, tag, h3, date, span,p,total = 12)
  section.detail
    .main
      .bg
        img(src=`${pathToCbBig}${num}.webp`)
      .info
        span #{ tag }
        h3 #{ h3 }
        dl
          dt 制作時期
          dd #{ date }
          dt 制作期間
          dd #{ span }
        p #{ p }
    block

    .btns
      - const next = num === 1 ? total : num - 1;
      - const prev = num === total ? 1 : num + 1;

      a.btn(href=`/cb/${prev}/`) 
        .arrow
          include ../../assets/img/common/arrow.svg
        span 前へ
      a.back(href="/cb/") 作品一覧へ戻る
      a.btn(href=`/cb/${next}/`)
        span 次へ
        .arrow
          include ../../assets/img/common/arrow.svg
