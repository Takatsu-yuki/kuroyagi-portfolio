mixin detail(num,tag, h3, date, span)
  section.detail
    .main
      .bg
        img(src=`${pathToTcgBig}${num}.png`)
        //- img(src=`${pathToTcgBig}${num}.png`, style="background-size: contain; background-img: `${pathToTcgBig}${num}.png`")
      .info
        span #{ tag }
        h3 #{ h3 }
        dl
          dt 制作時期
          dd #{ date }
          dt 制作期間
          dd #{ span }
        p
          block
    .btns
      .btn.pre
        include ../../assets/img/common/arrow.svg
        span 前へ
      span.back 作品一覧へ戻る
      .btn
        span 次へ
        include ../../assets/img/common/arrow.svg
